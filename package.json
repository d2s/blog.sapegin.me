{
  "name": "blog.sapegin.me",
  "private": true,
  "license": "See license in <Readme.md>",
  "scripts": {
    "start": "npx --node-arg '-r esm' gatsby develop",
    "build": "npx --node-arg '-r esm' gatsby build",
    "serve": "npx --node-arg '-r esm' gatsby serve",
    "start:ru": "cross-env BLOG_LANG=ru npx --node-arg '-r esm' gatsby develop",
    "build:ru": "cross-env BLOG_LANG=ru npx --node-arg '-r esm' gatsby build",
    "serve:ru": "cross-env BLOG_LANG=ru npx --node-arg '-r esm' gatsby serve",
    "pretest": "npm run lint:js && npm run lint:css && npm run lint:md",
    "test": "npm run typecheck",
    "posttest": "npm run format",
    "typecheck": "tsc",
    "lint:css": "stylelint 'src/**/*.tsx'",
    "lint:md": "remark --quiet \"content/**/*.md\"",
    "lint:js": "eslint . --cache --fix --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{js,tsx,md}\"",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build"
  },
  "engines": {
    "node": ">=8.9"
  },
  "browserslist": [
    ">1%",
    "last 1 version",
    "Firefox ESR",
    "not dead"
  ],
  "dependencies": {
    "date-fns": "^1.30.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-group": "^3.0.2",
    "react-helmet": "^5.2.1",
    "styled-components": "^4.3.2",
    "tamia": "^5.0.0-alpha.13",
    "tamia-gatsby-link": "^1.0.6"
  },
  "devDependencies": {
    "@types/react": "^16.9.1",
    "@types/react-helmet": "^5.0.9",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-tamia": "^6.2.1",
    "eslint-plugin-react": "^7.14.3",
    "esm": "3.2.11",
    "gatsby": "^2.13.59",
    "gatsby-plugin-canonical-urls": "^2.1.3",
    "gatsby-plugin-fathom": "^1.1.0",
    "gatsby-plugin-feed": "^2.3.6",
    "gatsby-plugin-lodash": "^3.1.2",
    "gatsby-plugin-netlify": "^2.1.4",
    "gatsby-plugin-react-helmet": "^3.1.3",
    "gatsby-plugin-styled-components": "^3.1.2",
    "gatsby-plugin-typescript": "^2.1.2",
    "gatsby-remark-prismjs": "^3.3.5",
    "gatsby-source-filesystem": "^2.1.9",
    "gatsby-transformer-remark": "^2.6.13",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "react-styleguidist": "^9.1.14",
    "remark-cli": "^7.0.0",
    "remark-lint": "^6.0.5",
    "richtypo": "^4.0.6",
    "richtypo-rules-en": "^4.0.4",
    "richtypo-rules-ru": "^4.0.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,tsx}": [
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.tsx": [
      "stylelint --fix",
      "git add"
    ]
  }
}
